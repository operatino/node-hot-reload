{
    "watch": [
        "src/",
        "lib/",
        "server.js",
        "index.js"
    ],
    "logging-enabled": true,
    "restart": true,
    "plugins": {
        "hot-reload-module-uncache": {
            "enabled": true,
            "uncache": "*", // Uncache all cached Node modules
        }
    }
}